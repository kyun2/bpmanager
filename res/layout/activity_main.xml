    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
    	xmlns:tools="http://schemas.android.com/tools"
    	android:id="@+id/container"
    	android:layout_width="match_parent"
    	android:layout_height="match_parent"
    	tools:context="com.example.bpmanager.MainActivity"
    	tools:ignore="MergeRootFrame" 
        android:orientation="vertical" >

        <FrameLayout
            android:id="@+id/frag_viewer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" >
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/home_menu"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="홈"
                android:textSize="@dimen/menu_btn_size" />

            <Button
                android:id="@+id/mydata_menu"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="종합기록"
                android:textSize="@dimen/menu_btn_size" />

            <Button
                android:id="@+id/mybp_menu"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="혈압관리"
                android:textSize="@dimen/menu_btn_size" />

            <Button
                android:id="@+id/mymedicin_menu"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="약물관리"
                android:textSize="@dimen/menu_btn_size" />

            <Button
                android:id="@+id/myhabit_menu"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="생활습관"
                android:textSize="@dimen/menu_btn_size" />

            <Button
                android:id="@+id/user_menu"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="나의정보"
                android:textSize="@dimen/menu_btn_size" />
        </LinearLayout>
    </LinearLayout>
