<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.testfragment.MainActivity$PlaceholderFragment" >

    <ScrollView
        android:id="@+id/scrview_habit"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:scrollbars="vertical"
        android:layout_alignParentTop="true"
        android:fadeScrollbars="false" >
        
	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:orientation="vertical" >
	
	        <TextView
	            android:id="@+id/textView1"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_margin="5dp"
	            android:text="생활습관관리"
	            android:textAppearance="?android:attr/textAppearanceLarge" />
	
	        <LinearLayout
	            android:layout_width="match_parent"
	            android:layout_height="match_parent"
	            android:layout_gravity="center_vertical"
	            android:orientation="vertical" >
	
	            <ImageButton
	                android:id="@+id/salt_btn"
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:layout_marginLeft="10dp"
	                android:layout_marginRight="10dp"
	                android:layout_marginTop="10dp"
			        android:background="@null"
			        android:src="@drawable/button_habit_salt"
			        android:scaleType="centerInside"
			        android:adjustViewBounds="true"
			        />
	
	            <ImageButton
	                android:id="@+id/weight_bth"
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:layout_marginLeft="10dp"
	                android:layout_marginRight="10dp"
	                android:layout_marginTop="10dp"
			        android:background="@null"
			        android:src="@drawable/button_habit_weight"
			        android:scaleType="centerInside"
			        android:adjustViewBounds="true" 
			        />
	
	            <ImageButton
	                android:id="@+id/waist_bth"
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:layout_marginLeft="10dp"
	                android:layout_marginRight="10dp"
	                android:layout_marginTop="10dp"
			        android:background="@null"
			        android:src="@drawable/button_habit_waist"
			        android:scaleType="centerInside"
			        android:adjustViewBounds="true" 
			        />
	
	            <ImageButton
	                android:id="@+id/exam_bth"
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:layout_marginLeft="10dp"
	                android:layout_marginRight="10dp"
	                android:layout_marginTop="10dp"
			        android:background="@null"
			        android:src="@drawable/button_habit_exercise"
			        android:scaleType="centerInside"
			        android:adjustViewBounds="true"
			        />
	
	            <ImageButton
	                android:id="@+id/alchole_bth"
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:layout_marginLeft="10dp"
	                android:layout_marginRight="10dp"
	                android:layout_marginTop="10dp"
			        android:background="@null"
			        android:src="@drawable/button_habit_alcohol"
			        android:scaleType="centerInside"
			        android:adjustViewBounds="true" 
			        />
	
	            <ImageButton
	                android:id="@+id/smoking_bth"
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:layout_marginLeft="10dp"
	                android:layout_marginRight="10dp"
	                android:layout_marginTop="10dp"
			        android:background="@null"
			        android:src="@drawable/button_habit_smoking"
			        android:scaleType="centerInside"
			        android:adjustViewBounds="true" 
			        />
	
	            <ImageButton
	                android:id="@+id/stress_btn"
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:layout_marginLeft="10dp"
	                android:layout_marginRight="10dp"
	                android:layout_marginTop="10dp"
			        android:background="@null"
			        android:src="@drawable/button_habit_stress"
			        android:scaleType="centerInside"
			        android:adjustViewBounds="true" 
			        />
	
	            <ImageButton
	                android:id="@+id/habit_noti_bth"
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:layout_marginLeft="10dp"
	                android:layout_marginRight="10dp"
	                android:layout_marginTop="10dp"
	                android:layout_marginBottom="20dp"
			        android:background="@null"
			        android:src="@drawable/button_habit_recommendation"
			        android:scaleType="centerInside"
			        android:adjustViewBounds="true" 
			        />
	        </LinearLayout>
	
	    </LinearLayout>
	    
    </ScrollView>

</RelativeLayout>