<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="@color/bg_gray" >
    
    <LinearLayout
        android:id="@+id/ll_medschedule_amount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@color/bg_white" >
        
        <TextView
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:text="복용 용량"
	        android:textAppearance="?android:attr/textAppearanceLarge" />
	
	    <EditText
	        android:id="@+id/medischedule_amount"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:inputType="number" >
	    </EditText>
	    
	    <TextView
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_weight="1.6"
	        android:text="정"
	        />
        
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_medschedule_count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_medschedule_amount"
        android:layout_centerHorizontal="true"
        android:background="@color/bg_white" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="복용 횟수"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <EditText
            android:id="@+id/medischedule_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="number" />
        
        <TextView
            android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_weight="1.6"
	        android:text="회"
            />
            
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/ll_medschedule_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_medschedule_count"
        android:layout_centerHorizontal="true"
        android:background="@color/bg_white" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="복용 시간"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <EditText
            android:id="@+id/medischedule_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="time" />
        
        <TextView
            android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_weight="1.6"
	        android:text=""
            />
            
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_medschedule_time"
        android:layout_centerHorizontal="true"
        android:background="@color/bg_white" >
        
        <Button
            android:id="@+id/medischedule_submit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:text="확인"
            android:background="@drawable/basic_button"
            android:textColor="@color/btn_text" >
        </Button>
        
    </LinearLayout>

</RelativeLayout>
