<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="@color/btn_indigo_tap" />
            <stroke
                android:width="3dp"
                android:color="#222222" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
    <item>
        <shape>
            <solid
			    android:color="@color/btn_indigo" />
            <stroke
                android:width="3dp"
                android:color="#aaaaaa" />
        </shape>
    </item>
</selector>
